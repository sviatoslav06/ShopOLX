@model ShopOLX.Data.Entities.Product;

<h1>Edit Product</h1>

<form asp-action="Edit" method="post" class="row g-3">
    <div class="col-md-12">
        <label asp-for="Name" class="form-label">Name</label>
        <input asp-for="Name" type="text" class="form-control" placeholder="Iphone 15 Pro">
    </div>
    <div class="col-md-12">
        <label asp-for="Phone" class="form-label">Phone</label>
        <input asp-for="Phone" type="text" class="form-control" placeholder="+380">
    </div>
    <div class="col-md-12">
        <label asp-for="Mail" class="form-label">Email</label>
        <input asp-for="Mail" type="email" class="form-control" placeholder="some@mail.com">
    </div>
    <div class="col-md-12">
        <label asp-for="City" class="form-label">City</label>
        <input asp-for="City" type="text" class="form-control" placeholder="Rivne">
    </div>
    <div class="col-md-6">
        <label asp-for="Price" class="form-label">Price</label>
        <input asp-for="Price" step="0.01" type="number" class="form-control" placeholder="$">
    </div>
    <div class="col-md-6">
        <label asp-for="Discount" class="form-label">Discount</label>
        <input asp-for="Discount" step="0.01" type="number" class="form-control" placeholder="%">
    </div>
    <div class="col-12">
        <label asp-for="CategoryId" class="form-label">Category</label>
        <select asp-for="CategoryId" asp-items="@ViewBag.Categories" class="form-select">
            <option disabled selected>Choose category...</option>
        </select>
    </div>
    <div class="col-12 mb-3">
        <label asp-for="Description" class="form-label">Description</label>
        <textarea asp-for="Description" class="form-control" rows="3" placeholder="..."></textarea>
    </div>
    <div class="col-md-12">
        <label asp-for="ImageUrl" class="form-label">Image URL</label>
        <input asp-for="ImageUrl" type="url" class="form-control" placeholder="https//">
    </div>
    <div class="col-12">
        <div class="form-check">
            <input asp-for="InStock" class="form-check-input" type="checkbox">
            <label asp-for="InStock" class="form-check-label">In Stock</label>
        </div>
        <div class="form-check">
            <input asp-for="IsUsed" class="form-check-input" type="checkbox">
            <label asp-for="IsUsed" class="form-check-label">New</label>
        </div>
    </div>

    <div class="col-6">
        <a asp-action="Index" class="btn btn-dark w-100">Back</a>
    </div>
    <div class="col-6">
        <button type="submit" class="btn btn-success w-100">Edit</button>
    </div>
</form>